<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.exoplatform.exo-wiki</groupId>
    <artifactId>exo-wiki-demo</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <artifactId>exo-wiki-demo-ear</artifactId>
  <packaging>ear</packaging>
  <name>eXo Wiki Demo Portal ear</name>
  <description>Wiki Demo EAR for GateIn</description>
  <dependencies>
    <dependency>
      <groupId>org.exoplatform.exo-wiki</groupId>
      <artifactId>exo-wiki-demo-config</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.exoplatform.exo-wiki</groupId>
      <artifactId>exo-wiki-demo-rest</artifactId>
      <version>${project.version}</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>org.exoplatform.exo-wiki</groupId>
      <artifactId>exo-wiki-demo-webapp</artifactId>
      <version>${project.version}</version>
      <type>war</type>
    </dependency>
  </dependencies>
  <build>
    <finalName>gatein-exo-wiki-sample-${project.version}</finalName>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ear-plugin</artifactId>
        <configuration>
          <defaultLibBundleDir>lib</defaultLibBundleDir>
          <displayName>wikidemo</displayName>
          <modules>
            <jarModule>
              <groupId>org.exoplatform.exo-wiki</groupId>
              <artifactId>exo-wiki-demo-config</artifactId>
              <includeInApplicationXml>true</includeInApplicationXml>
            </jarModule>
            <webModule>
              <groupId>org.exoplatform.exo-wiki</groupId>
              <artifactId>exo-wiki-demo-webapp</artifactId>
              <contextRoot>wikidemo</contextRoot>
            </webModule>
            <webModule>
              <groupId>org.exoplatform.exo-wiki</groupId>
              <artifactId>exo-wiki-demo-rest</artifactId>
              <contextRoot>rest-wikidemo</contextRoot>
            </webModule>
          </modules>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
